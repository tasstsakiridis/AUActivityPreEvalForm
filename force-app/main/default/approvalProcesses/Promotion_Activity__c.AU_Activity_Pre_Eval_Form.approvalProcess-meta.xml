<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Begin_Date__c</field>
        <field>End_Date__c</field>
        <field>Channel__c</field>
        <field>Activity_Budget__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Project_Manager_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Promotion_Activity__c.Activity_Budget__c</field>
                <operation>greaterOrEqual</operation>
                <value>&quot;AUD 20,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Manager Approval</label>
        <name>Manager_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>andy_kim@b-f.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>marisa_murray@b-f.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>matthew_bazeley@b-f.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Promotion_Activity__c.Activity_Budget__c</field>
                <operation>greaterOrEqual</operation>
                <value>&quot;AUD 100,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Directors</label>
        <name>Directors</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>AU_Managing_Director</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Promotion_Activity__c.Activity_Budget__c</field>
                <operation>greaterOrEqual</operation>
                <value>&quot;AUD 250,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <label>MD</label>
        <name>MD</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Workflow_Email_Templates/AU_PreEvaluation_Form_Approval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Promotion_Activity__c.Market_Filter__c</field>
            <operation>equals</operation>
            <value>Australia</value>
        </criteriaItems>
        <criteriaItems>
            <field>Promotion_Activity__c.RecordType</field>
            <operation>equals</operation>
            <value>CRM - Australia</value>
        </criteriaItems>
        <criteriaItems>
            <field>Promotion_Activity__c.Activity_Budget__c</field>
            <operation>greaterThan</operation>
            <value>AUD 0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Promotion_Activity__c.Status__c</field>
            <operation>equals</operation>
            <value>Submitted</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Activity_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Activity_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Activity_Has_Been_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AU_Activity_Status_Update</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Activity_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AU_Activity_Status_Update</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Activity_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>AU Activity Pre Eval Form</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>6</processOrder>
    <recallActions>
        <action>
            <name>Activity_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
